# Production Environment Configuration
NODE_ENV=production
PORT=9000

# Database (Railway Template)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Medusa Backend
MEDUSA_BACKEND_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}

# CORS Configuration (Production Domains)
STORE_CORS=https://www.yourdomain.com,https://yourdomain.com
ADMIN_CORS=https://${{RAILWAY_PUBLIC_DOMAIN}}
AUTH_CORS=https://${{RAILWAY_PUBLIC_DOMAIN}},https://www.yourdomain.com

# Authentication (Production Secrets)
JWT_SECRET=${{JWT_SECRET_PRODUCTION}}
COOKIE_SECRET=${{COOKIE_SECRET_PRODUCTION}}

# Stripe (Live Keys)
STRIPE_API_KEY=${{STRIPE_LIVE_API_KEY}}
STRIPE_WEBHOOK_SECRET=${{STRIPE_LIVE_WEBHOOK_SECRET}}

# Redis (Production)
REDIS_URL=${{Redis.REDIS_URL}}

# Sanity (Production)
NEXT_PUBLIC_SANITY_PROJECT_ID=${{SANITY_PROJECT_ID}}
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=${{SANITY_API_TOKEN_PRODUCTION}}

# Clerk (Production)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${{CLERK_PUBLISHABLE_KEY_PRODUCTION}}
CLERK_SECRET_KEY=${{CLERK_SECRET_KEY_PRODUCTION}}

# Monitoring & Observability
SENTRY_DSN=${{SENTRY_DSN}}
SENTRY_ENVIRONMENT=production
ENABLE_PERFORMANCE_MONITORING=true
DATADOG_API_KEY=${{DATADOG_API_KEY}}
DATADOG_APP_KEY=${{DATADOG_APP_KEY}}
NEW_RELIC_LICENSE_KEY=${{NEW_RELIC_LICENSE_KEY}}

# Logging
LOG_LEVEL=warn
ENABLE_CONSOLE_LOGS=false
LOG_RETENTION_DAYS=30

# Security
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
CDN_URL=${{CDN_URL}}

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30000
HEALTH_CHECK_INTERVAL=30000

# Worker Mode
MEDUSA_WORKER_MODE=server

# Backup
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Feature Flags
ENABLE_FEATURE_FLAGS=true
FEATURE_FLAG_PROVIDER=production

# SSL/TLS
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Email
SMTP_HOST=${{SMTP_HOST}}
SMTP_PORT=${{SMTP_PORT}}
SMTP_USER=${{SMTP_USER}}
SMTP_PASSWORD=${{SMTP_PASSWORD}}
FROM_EMAIL=${{FROM_EMAIL}}

# Analytics
GOOGLE_ANALYTICS_ID=${{GOOGLE_ANALYTICS_ID}}
FACEBOOK_PIXEL_ID=${{FACEBOOK_PIXEL_ID}}

# Third-party Services
AWS_ACCESS_KEY_ID=${{AWS_ACCESS_KEY_ID}}
AWS_SECRET_ACCESS_KEY=${{AWS_SECRET_ACCESS_KEY}}
AWS_REGION=${{AWS_REGION}}
S3_BUCKET_NAME=${{S3_BUCKET_NAME}}