# Staging Environment Configuration
NODE_ENV=production
PORT=9000

# Database (Railway Template)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Medusa Backend
MEDUSA_BACKEND_URL=https://${{RAILWAY_PUBLIC_DOMAIN}}

# CORS Configuration
STORE_CORS=https://staging-frontend.yourdomain.com,https://www.staging-frontend.yourdomain.com
ADMIN_CORS=https://${{RAILWAY_PUBLIC_DOMAIN}}
AUTH_CORS=https://${{RAILWAY_PUBLIC_DOMAIN}},https://staging-frontend.yourdomain.com

# Authentication (Staging Secrets)
JWT_SECRET=${{JWT_SECRET_STAGING}}
COOKIE_SECRET=${{COOKIE_SECRET_STAGING}}

# Stripe (Test Keys)
STRIPE_API_KEY=${{STRIPE_TEST_API_KEY}}
STRIPE_WEBHOOK_SECRET=${{STRIPE_TEST_WEBHOOK_SECRET}}

# Redis (Optional)
REDIS_URL=${{Redis.REDIS_URL}}


# Clerk (Staging)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=${{CLERK_PUBLISHABLE_KEY_STAGING}}
CLERK_SECRET_KEY=${{CLERK_SECRET_KEY_STAGING}}

# Monitoring
SENTRY_DSN=${{SENTRY_DSN}}
SENTRY_ENVIRONMENT=staging
ENABLE_PERFORMANCE_MONITORING=true

# Logging
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=false

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30000

# Worker Mode
MEDUSA_WORKER_MODE=server

# Feature Flags
ENABLE_FEATURE_FLAGS=true
FEATURE_FLAG_PROVIDER=staging