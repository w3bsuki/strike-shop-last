# Development Environment Configuration
NODE_ENV=development
PORT=4000

# Database
DATABASE_URL=postgresql://localhost:5432/strike_shop_dev

# Medusa Backend
MEDUSA_BACKEND_URL=http://localhost:9000

# CORS Configuration
STORE_CORS=http://localhost:3000,http://localhost:4000
ADMIN_CORS=http://localhost:9000
AUTH_CORS=http://localhost:9000,http://localhost:3000

# Authentication
JWT_SECRET=dev-jwt-secret-key
COOKIE_SECRET=dev-cookie-secret-key

# Stripe (Test Keys)
STRIPE_API_KEY=sk_test_your_development_key
STRIPE_WEBHOOK_SECRET=whsec_dev_webhook_secret

# Redis (Optional)
