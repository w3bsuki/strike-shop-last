# Environment Configuration
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# API Configuration
API_TITLE=Authentication API
API_VERSION=1.0.0
API_DESCRIPTION=Production-ready authentication API with JWT, rate limiting, and security best practices

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=auth_user
DB_PASSWORD=secure_password_here
DB_NAME=auth_db
DB_SSL_MODE=prefer

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_with_at_least_32_characters_for_security
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRE=900
JWT_REFRESH_EXPIRE=604800
JWT_ISSUER=auth-api
JWT_AUDIENCE=auth-api-users

# Security Configuration
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60
AUTH_RATE_LIMIT_PER_MINUTE=5

# Session Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# Monitoring Configuration
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
ENABLE_METRICS=true
METRICS_PATH=/metrics
LOG_LEVEL=INFO
LOG_FORMAT=json
HEALTH_CHECK_PATH=/health