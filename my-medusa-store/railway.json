{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 120
  },
  "services": [
    {
      "name": "medusa",
      "source": {
        "repo": "."
      },
      "environments": {
        "production": {
          "build": {
            "NODE_ENV": "production"
          },
          "deploy": {
            "startCommand": "medusa start"
          }
        }
      }
    }
  ]
}