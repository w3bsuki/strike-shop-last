{
  "name": "strike-shop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p ${PORT:-4000}",
    "dev:turbo": "next dev --turbo -p 4000",
    "build": "next build",
    "build:prod": "TS_NODE_PROJECT=tsconfig.production.json next build",
    "start": "next start -p 4000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate-env": "node scripts/validate-env.js",
    "validate-env:prod": "node scripts/validate-env.js .env.production",
    "analyze": "ANALYZE=true next build",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "build:analyze": "npm run build && npm run analyze:bundle",
    "check:bundle": "node scripts/check-bundle-size.js",
    "optimize:check": "npm run check:bundle",
    "test": "jest --config jest.config.frontend.js",
    "test:watch": "jest --config jest.config.frontend.js --watch",
    "test:coverage": "jest --config jest.config.frontend.js --coverage",
    "test:ci": "jest --config jest.config.frontend.js --ci --coverage --watchAll=false",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:component": "jest --config jest.config.component.js",
    "test:domain": "jest --config jest.config.domain.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:performance": "npm run test:e2e -- --grep performance",
    "test:accessibility": "npm run test:e2e -- --grep accessibility",
    "test:visual": "npm run test:e2e -- --grep visual",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:component && npm run test:e2e",
    "test:coverage:all": "npm run test:coverage && npm run test:e2e",
    "test:watch:unit": "npm run test:unit -- --watch",
    "test:watch:component": "npm run test:component -- --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --config jest.config.frontend.js --runInBand",
    "test:quality-gates": "node scripts/test-coverage.js",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "bundle:check": "node scripts/analyze-bundle.js",
    "bundle:optimize": "node scripts/optimize-bundle.js",
    "build:emergency": "next build --no-lint",
    "type-check:relaxed": "tsc --noEmit --project tsconfig.build.json",
    "lighthouse": "lhci autorun",
    "lighthouse:view": "lhci open",
    "wcag:validate": "node scripts/wcag-validation.js",
    "security:audit": "npm audit --production",
    "security:fix": "npm audit fix",
    "security:cors": "node scripts/verify-cors-config.js",
    "security:validate-prod": "NODE_ENV=production node scripts/validate-production-env.js",
    "load:test": "k6 run k6/load-test.js",
    "load:stress": "k6 run k6/stress-test.js",
    "load:spike": "k6 run k6/spike-test.js",
    "load:api": "k6 run k6/api-performance-test.js",
    "quality:report": "npm run test:coverage && npm run security:audit && echo 'Quality report generated'",
    "pwa:validate": "node scripts/validate-pwa.js",
    "pwa:icons": "node scripts/generate-pwa-icons.js",
    "pwa:test": "npm run build && npm run pwa:validate",
    "optimize:fonts": "node scripts/optimize-fonts-simple.js",
    "optimize:fonts:advanced": "node scripts/optimize-fonts.js",
    "optimize:assets": "node scripts/optimize-assets.js",
    "optimize:all": "npm run optimize:fonts && npm run optimize:assets",
    "build:optimized": "npm run optimize:all && npm run build",
    "css:watch": "postcss app/**/*.css --dir .next/static/css --watch",
    "css:build": "NODE_ENV=production postcss app/**/*.css --dir .next/static/css",
    "css:analyze": "npx tailwindcss --help && echo \"CSS analysis complete\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@next/bundle-analyzer": "^14.2.5",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.0",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.1",
    "@shopify/hydrogen-react": "^2025.5.0",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.4.0",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.50.2",
    "@tanstack/react-query": "^5.81.5",
    "@tanstack/react-query-devtools": "^5.81.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.19.1",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.525.0",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-intersection-observer": "^9.16.0",
    "recharts": "^2.12.7",
    "resend": "^4.6.0",
    "stripe": "^18.2.1",
    "tailwind-merge": "^2.3.0",
    "vaul": "^0.9.1",
    "web-vitals": "^3.5.2",
    "zod": "^3.25.67",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "@playwright/test": "^1.48.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.14.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.3.4",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-testing-library": "^6.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.5.3",
    "sharp": "^0.34.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "workbox-webpack-plugin": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "overrides": {
    "@shopify/hydrogen-react": {
      "react": "^19.1.0",
      "react-dom": "^19.1.0"
    },
    "eslint-config-next": {
      "eslint": "^8.57.1"
    }
  }
}
