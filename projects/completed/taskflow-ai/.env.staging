# Staging Environment Configuration
# Copy this file to .env.staging and fill in the values

# Database Configuration
POSTGRES_USER=taskflow_staging
POSTGRES_PASSWORD=<generate-strong-password>
POSTGRES_DB=taskflow_staging
DATABASE_URL=postgresql://taskflow_staging:<password>@postgres:5432/taskflow_staging

# Redis Configuration
REDIS_PASSWORD=<generate-strong-redis-password>
REDIS_URL=redis://:<redis-password>@redis:6379/0

# Security
SECRET_KEY=<generate-with-openssl-rand-hex-32>
JWT_SECRET_KEY=<generate-with-openssl-rand-hex-32>
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
CORS_ORIGINS=https://staging.taskflow-ai.dev
ENVIRONMENT=staging
DEBUG=false

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://staging-api.taskflow-ai.dev
NEXT_PUBLIC_WS_URL=wss://staging-api.taskflow-ai.dev

# External Services
OPENAI_API_KEY=<your-openai-api-key>

# Email Service Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USERNAME=apikey
EMAIL_PASSWORD=<your-sendgrid-api-key>
EMAIL_FROM=noreply@taskflow-ai.dev
EMAIL_USE_TLS=true

# Monitoring
SENTRY_DSN=<your-sentry-dsn>
GRAFANA_USER=admin
GRAFANA_PASSWORD=<secure-grafana-password>

# GitHub Container Registry
GITHUB_REPOSITORY=<your-github-username>/taskflow-ai
IMAGE_TAG=develop

# SSL Certificate Email
CERTBOT_EMAIL=devops@taskflow-ai.dev

# Backup Configuration
BACKUP_RETENTION_DAYS=7
AWS_ACCESS_KEY_ID=<your-aws-access-key>
AWS_SECRET_ACCESS_KEY=<your-aws-secret-key>
AWS_DEFAULT_REGION=us-east-1
S3_BACKUP_BUCKET=taskflow-ai-staging-backups