# Environment
ENVIRONMENT=development
DEBUG=True

# API
API_V1_STR=/api/v1
PROJECT_NAME="TaskFlow AI"
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Database
DATABASE_URL=postgresql+asyncpg://taskflow:taskflow@localhost:5432/taskflow_db
POSTGRES_USER=taskflow
POSTGRES_PASSWORD=taskflow
POSTGRES_DB=taskflow_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI - REQUIRED for AI features
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative: Use Anthropic Claude (add this if you want to support both)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# WebSocket
WS_MESSAGE_QUEUE=redis://localhost:6379/3