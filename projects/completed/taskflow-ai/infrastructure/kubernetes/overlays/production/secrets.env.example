# Copy this file to secrets.env and fill in the actual values
# DO NOT commit secrets.env to version control

# Database credentials
POSTGRES_USER=taskflow_prod
POSTGRES_PASSWORD=your-very-secure-password-here
POSTGRES_DB=taskflow_prod
DATABASE_URL=postgresql://taskflow_prod:your-very-secure-password-here@postgres-service:5432/taskflow_prod

# Redis credentials
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@redis-service:6379/0

# Application secrets
SECRET_KEY=generate-with-openssl-rand-hex-32

# External API keys
OPENAI_API_KEY=your-production-openai-api-key